<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:background="#30000000">

    <ImageView
        android:id="@+id/view__pin_code__iv_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@null"
        tools:src="@drawable/pin_code__on"/>

    <ImageView
        android:id="@+id/view__pin_code__iv_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@null"
        tools:src="@drawable/pin_code__on"/>

    <ImageView
        android:id="@+id/view__pin_code__iv_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@null"
        tools:src="@drawable/pin_code__on"/>

    <ImageView
        android:id="@+id/view__pin_code__iv_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@null"
        tools:src="@drawable/pin_code__off"/>
</LinearLayout>